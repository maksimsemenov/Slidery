{
  "name": "slidery",
  "version": "1.0.0-rc1",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/maksimsemenov/slidery"
  },
  "bugs": {
    "url": "https://github.com/maksimsemenov/slidery/issues"
  },
  "main": "dist/main.js",
  "jsnext:main": "dist/main.mjs",
  "browser": "dist/main.browser.js",
  "unpkg": "dist/slidery.min.js",
  "files": [
    "dist/main.js",
    "dist/main.mjs",
    "dist/main.browser.js",
    "dist/slidery.min.js"
  ],
  "author": {
    "name": "Maksim Semenov",
    "email": "maksa.semenov@gmail.com",
    "url": "http://maxsemenov.com"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && node build.js",
    "test": "jest",
    "prepublish": "npm run test && npm run build"
  },
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.18.1",
    "eslint-plugin-jest": "^21.15.0",
    "jest": "^22.4.2",
    "less": "^3.0.1",
    "postcss-load-config": "^1.2.0",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-postcss": "^1.6.1",
    "rollup-plugin-uglify": "^3.0.0",
    "simulant": "^0.2.2"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false
        }
      ]
    ],
    "plugins": ["transform-class-properties"],
    "env": {
      "test": {
        "presets": [["env"]],
        "plugins": ["transform-class-properties"]
      }
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "browserslist": [">1%", "last 4 versions", "Firefox ESR", "not ie < 9"],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 80
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  }
}
